<div class="container container_grey curved_border emphasize-dark">
<div class="row-fluid col-md-offset-1 col-md-11">

 <% if current_user and current_user.admin %>

  <p class="font_trebuchet_blk_20">Listing line_items</p>

<table>
  <tr>
    <th>Challenger</th>
    <th>Cart</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @line_items.each do |line_item| %>
  <tr>
    <td><%= line_item.challenger_id %></td>
    <td><%= line_item.cart_id %></td>
    <td><%= link_to 'Show', line_item %></td>
    <td><%= link_to 'Edit', edit_line_item_path(line_item) %></td>
    <td><%= link_to 'Destroy', line_item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Line item', new_line_item_path %>

<p><%= will_paginate @line_items %></p>
<% end %>

</div>
</div>
