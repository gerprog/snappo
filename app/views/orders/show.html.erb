<div class="container container_grey emphasize-dark curved_border">
<div class="row-fluid">
		<div class="text-center" style="margin-top:-10px;">
			<!--<p id="notice"><%= notice %></p>-->
			<p class="font_trebuchet_blk_25">Here you can upload a photo or change a current one. </p>

				<div class="btn btn-info font_century_blk_30" style="font-size:30pt;margin-top:20px;padding: 16px 28px;"><%= link_to "Click here when done", :controller => "challenges", :action => "thanks_for_photo" %></div>

			 <hr class="style-two">
		</div>
<div class="row-fluid">


		<div id="challenges_4" class="span5" style="margin-left:100px">
				<p><%= link_to 'Upload Photo', edit_order_path(@order), class: "btn btn-inverse btn-lg font_century_blk_30", style: "font-size:20pt;padding: 16px 28px;" %> </p>
				  <% if current_user and current_user.admin %>
				<%= link_to 'Back', orders_path %>
				  <% end %>

				<p>
				  <b>Name:</b>
				  <%= @order.name %>
				</p>

				<p>
				  <b>Email:</b>
				  <%= @order.email %>
				</p>

				<p>
				  <b>My Photo!</b> </p>
				  <%= image_tag @order.avatar.url(:medium) %>
		</div>

		<div id="missing">
			<p class="font_trebuchet_blk_30">
			Your<br>
			Photo<br>
			here<p>
		</div>


		<div class="span6" style="margin-top:100px;float:left;">
			<p>
			  <b>Your Challenge:</b>
			  <%= render(@order.line_items.to_a)%>
			</p>	
		</div>
	
</div>
	
</div>
</div>